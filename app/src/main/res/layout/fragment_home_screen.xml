<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="swetabh.suman.com.crosszero.HomeScreenFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/card_vs_android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        app:cardElevation="@dimen/dp_10"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/dp_25">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="1"
            android:text="@string/vs_android"
            android:textColor="@color/grey_font"
            android:textSize="@dimen/sp_25"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_vs_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        app:cardElevation="@dimen/dp_10"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/dp_25">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="1"
            android:text="@string/vs_player"
            android:textColor="@color/grey_font"
            android:textSize="@dimen/sp_25"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        app:cardElevation="@dimen/dp_10"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/dp_25">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="1"
            android:text="@string/exit"
            android:textColor="@color/grey_font"
            android:textSize="@dimen/sp_25"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

</LinearLayout>
